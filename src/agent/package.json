{
  "name": "simple-live-reload-server",
  "version": "1.0.0",
  "description": "A simple server to serve index.html with live reload and build",
  "main": "index.html",
  "scripts": {
    "start": "lite-server",
    "build": "npm-run-all clean build:copy build:js build:css",
    "clean": "rm -rf build",
    "build:copy": "mkdir -p build && cp -r index.html images build/",
    "build:js": "uglifyjs chatbot.js -o build/chatbot.min.js",
    "build:css": "cleancss -o build/css/styles.css css/*.css"
  },
  "devDependencies": {
    "clean-css-cli": "^5.3.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "uglify-js": "^3.14.4"
  },
  "lite-server": {
    "server": {
      "baseDir": "./",
      "middleware": {
        "1": null
      }
    },
    "files": [
      "./index.html",
      "./css/**/*.css",
      "./js/**/*.js",
      "./images/**/*.*"
    ]
  }
}
